# 大学课程讲解视频生成系统 - 环境变量配置示例

# ====== API配置 ======
# 选择API提供商: deepseek, openai, anthropic, xinference, custom
API_PROVIDER=deepseek

# DeepSeek配置（默认）
XINFERENCE_API_BASE=https://api.deepseek.com/v1
XINFERENCE_API_KEY=your_deepseek_api_key_here
MODEL_NAME=deepseek-chat

# OpenAI配置（可选）
#API_PROVIDER=openai
#OPENAI_API_KEY=your_openai_key_here

# Anthropic配置（可选）
#API_PROVIDER=anthropic
#ANTHROPIC_API_KEY=your_anthropic_key_here

# 自定义API配置（可选）
#API_PROVIDER=custom
#CUSTOM_API_BASE=http://your-api-server/v1
#CUSTOM_API_KEY=your_custom_key
#CUSTOM_MODEL_NAME=your_model_name

# ====== 性能配置 ======
# 模型参数
TEMPERATURE=0.6
MAX_TOKENS=8192

# 性能模式配置
# 快速模式: ENABLE_REVIEW_AGENT=false, MAX_DEBUG_ATTEMPTS=1, MANIM_QUALITY=low_quality
# 平衡模式: ENABLE_REVIEW_AGENT=true, MAX_DEBUG_ATTEMPTS=2, MANIM_QUALITY=low_quality
# 高质量模式: ENABLE_REVIEW_AGENT=true, MAX_DEBUG_ATTEMPTS=3, MANIM_QUALITY=medium_quality

ENABLE_REVIEW_AGENT=true
ENABLE_UNDERSTANDING_AGENT=true
MAX_DEBUG_ATTEMPTS=2

# ====== Manim配置 ======
# 输出目录
MANIM_OUTPUT_DIR=./media

# 视频质量: low_quality (480p15), medium_quality (720p30), high_quality (1080p60)
MANIM_QUALITY=low_quality

# ====== 大学版特有配置 ======
# 启用大学模式
UNIVERSITY_MODE=true

# 默认视频时长（秒）
DEFAULT_VIDEO_DURATION=900

# 知识图谱可视化
ENABLE_KNOWLEDGE_GRAPH=true

# ====== Anthropic Skills（高级功能，可选）======
# 启用Anthropic Skills需要Anthropic API key
ENABLE_ANTHROPIC_SKILLS=false
#ANTHROPIC_API_KEY=your_anthropic_key_for_skills

# ====== 性能预设 ======
# 如果你想使用预设配置，取消下面某一组的注释

# 快速模式（15-30秒）
#ENABLE_REVIEW_AGENT=false
#MAX_DEBUG_ATTEMPTS=1
#MANIM_QUALITY=low_quality

# 平衡模式（40-60秒）- 推荐
#ENABLE_REVIEW_AGENT=true
#MAX_DEBUG_ATTEMPTS=2
#MANIM_QUALITY=low_quality

# 高质量模式（60-120秒）
#ENABLE_REVIEW_AGENT=true
#MAX_DEBUG_ATTEMPTS=3
#MANIM_QUALITY=medium_quality
